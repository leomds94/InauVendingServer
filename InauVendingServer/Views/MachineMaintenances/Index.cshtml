@model IEnumerable<InauVendingServer.Models.MachineMaintenance>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-success" >Cadastrar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MaintenanceTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaintenanceCost)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Machine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maintenance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Machine.MachineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maintenance.MaintenanceType)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.MachineMaintenanceId">Editar</a>
                <a asp-action="Details" class="btn btn-info"  asp-route-id="@item.MachineMaintenanceId">Detalhes</a>
                <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.MachineMaintenanceId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
