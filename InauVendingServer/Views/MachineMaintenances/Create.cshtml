@model InauVendingServer.Models.MachineMaintenance

<div class="modal fade" id="MaintenanceAddModals">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                Criar Manutenção para Máquina
            </div>
            <div class="modal-body">
                <div>
                    <form asp-action="Create">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="MachineId" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    @if (ViewContext.RouteData.Values["id"] == null)
                                    {
                                        <select asp-for="MachineId" asp-items="ViewBag.MachineId" class="form-control"></select>
                                    }
                                    else
                                    {
                                        <p asp-for="MachineId">@ViewData["MachineName"]</p>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="MaintenanceId" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <select asp-for="MaintenanceId" class="form-control" asp-items="ViewBag.MaintenanceId"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="MaintenanceTime" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input asp-for="MaintenanceTime" type="datetime" class="form-control date_time" />
                                    @*<c1-input-date-time value="@DateTime.Now"
                                                        time-step="30"
                                                        format="dd/MM/yyyy HH:mm"
                                                        mask="99/99/9999 99:99"
                                                        asp-for="MaintenanceTime">
                                    </c1-input-date-time>*@
                                    <span asp-validation-for="MaintenanceTime" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="MaintenanceCost" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    @*<c1-input-number value="3.5"
                                                     format="c2"
                                                     step=".5"
                                                     min="0"
                                                     max="40"
                                                     asp-for="MaintenanceCost">
                                    </c1-input-number>*@
                                    <input asp-for="MaintenanceCost" class="form-control money" />
                                    <span asp-validation-for="MaintenanceCost" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Criar" class="btn btn-default" />
                                    <a data-dismiss="modal" class="btn btn-primary">Voltar</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
