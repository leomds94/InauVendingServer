@model IEnumerable<InauVendingServer.Models.ProductMachine>

@{
    ViewData["Title"] = "Sumario Produtos de Máquinas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Produtos de Máquinas</h2>

<p>
    <a asp-action="Create" class="btn btn-success" >Cadastrar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductMachineQty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductMachinePrice)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Machine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductMachineQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductMachinePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Machine.MachineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.ProductMachineId">Editar</a>
                <a asp-action="Details" class="btn btn-info"  asp-route-id="@item.ProductMachineId">Detalhes</a>
                <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.ProductMachineId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
