@model IEnumerable<InauVendingServer.Models.Maintenance>

@{
    ViewData["Title"] = "Sumario Manutenções";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manutenções</h2>

<p>
    <a asp-action="Create" class="btn btn-success" >Cadastrar nova</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MaintenanceType)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceType)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.MaintenanceId">Editar</a>
                <a asp-action="Details" class="btn btn-info"  asp-route-id="@item.MaintenanceId">Detalhes</a>
                <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.MaintenanceId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
